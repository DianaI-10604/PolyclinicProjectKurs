<Window x:Class="PolyclinicProjectKurs.ForgotPasswordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Восстановление пароля" Height="150" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Введите вашу электронную почту:" Margin="0 0 0 10"/>
        <TextBox x:Name="EmailTextBox" Width="250"/>
        <Button Content="Отправить код" Click="SendNewPasswordButton_Click" Margin="0 10 0 0"/>
    </StackPanel>
</Window>
