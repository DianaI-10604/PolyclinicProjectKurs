<Window x:Class="PolyclinicProjectKurs.ChangeDiagnosisPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicProjectKurs"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="ChangeDiagnosisPage" Height="200" Width="300">
    <Border Background="#18181f">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Измените данные: " Foreground="White" FontWeight="Bold" Margin="0 10 0 0" HorizontalAlignment="Center"/>
            <TextBlock Text="Жалобы: " Foreground="White" FontWeight="Bold" Margin="0 10 0 0" HorizontalAlignment="Left"/>
            <TextBox Width="200" Name="ComplaintsTextBox"/>

            <TextBlock Text="Диагноз: " Foreground="White" FontWeight="Bold" Margin="0 10 0 0" HorizontalAlignment="Left"/>
            <TextBox Width="200" Name="DiagnosisTextBox"/>
            <Button Background="#18bc84" Foreground="White" Content="Подтвердить" FontWeight="Bold" Margin="0 10 0 0" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Border>
</Window>
